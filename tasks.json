{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "mingw32-make",
            },
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "bmp",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/.vscode/"
            },
            "command": "python",
            "args": [
                "bmp.py"
            ]
        }
    ]
}